<div class="mx-auto md:w-2/3 w-full p-4">
  <h1 class="font-bold text-4xl mb-4 text-gray-900 dark:text-white">Editing post</h1>

  <%= render "form", post: @post %>

  <div class="mt-4 space-x-2">
    <%= link_to "Show this post", @post, class: "inline-block text-sm font-medium text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 rounded-lg px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    <%= link_to "Back to posts", posts_path, class: "inline-block text-sm font-medium text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 rounded-lg px-4 py-2 dark:bg-gray-600 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800" %>
  </div>
</div>