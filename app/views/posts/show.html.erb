<div class="max-w-2xl p-4 bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700 mx-auto">
  <div class="pb-4">
    <% if notice.present? %>
      <div class="mb-5 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200" role="alert" id="notice"><%= notice %></div>
    <% end %>

    <!-- Tytuł posta -->
    <h1 class="mb-4 text-2xl font-bold leading-none tracking-tight text-gray-900 md:text-3xl lg:text-4xl dark:text-white"><%= @post.title %></h1>

    <!-- Opis posta -->
    <p class="mb-4 text-base text-gray-700 dark:text-gray-400"><%= @post.description %></p>

    <!-- Obraz posta, jeśli jest załączony -->
    <% if @post.image.attached? %>
      <div class="mb-4 flex justify-center">
        <%= image_tag @post.image, class: "w-full h-auto rounded-lg shadow-lg object-cover" %>
      </div>
    <% end %>

    <div class="flex justify-between items-center">
      <%= link_to "Edit this post", edit_post_path(@post), class: "text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800" %>
      <%= link_to "Back to posts", posts_path, class: "ml-2 text-white bg-gray-600 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-gray-500 dark:hover:bg-gray-600 dark:focus:ring-gray-800" %>
      <div class="ml-2">
        <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800" %>
      </div>
    </div>
  </div>
</div>